<h1><%= @genre.name %></h1>

<a class="btn btn-danger"
    href="/genres/<%= @genre.slug %>"
    data-method="delete"
    rel="nofollow">Delete Genre</a>
<br>
<ul>
<% @genre.movies.each do |movie| %>
<li><a href="/movies/<%=movie.slug%>"><%=movie.name%></li>
    <% end %>
</ul>



<div class="edit_form">
  <h3>Edit Genre</h3>
  <form action="/genres/<%= @genre.slug %>" method="post">
    <input name="_method" type="hidden" value="patch">
    <label for="genre_name"> Name:</label>
    <input id="genre_name" name="genre[name]" type="text" value="<%= @genre.name %>">
    <input name="params[slug]" type="hidden" value="genre[name]">
    <button class="btn btn-success"> Update</button>
</form>
</div>


<button><a href="/genres">Back to Genres</a></button>
<button><a href="/movies">Back to Movies</a></button>
